extends layout
block title
    .jumbotron
        table(style='width:100%')
            tr
                td(style='width:50%')
                    h1 LieToMe!
                    p Lie to your friends. 
                td(align='right')
                    button#serverButton(type='button' action='' class='btn btn-default' style="font-size:150%") Kontrolni igrač
                td(align='right')
                    button#clientButton(type='button' class='btn btn-default' style="font-size:150%") Igrač
     
    script.
        $('#serverButton').click(function(evt){
            window.location = 'create';
            return;
        });

        $('#clientButton').click(function(evt){
            window.location = 'home';
            return;
        });
        if(parseInt($(document).width()) < 553) {
            document.getElementById('serverButton').style.display = 'none';
            document.getElementById('clientButton').style.display = 'none';
        };